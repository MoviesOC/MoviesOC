        {{#if isConnected}}
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="/auth/logout">Logout</a>
        </li>
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="/user-profile">Profile</a>
        </li>
        <form action="/find-movies" method="Get" class="form-inline">
          <input type="text" name="search" placeholder="Search" id="search">
          <input type="hidden" value="Search">
        </form>
        {{else}}
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="/auth/login">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="/auth/signup">Signup</a>
        </li>
        {{/if}}
        <li class="nav-item">
        </li>
      </ul>
    </div>
  </div>
