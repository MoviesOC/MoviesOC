{{!-- can be changed to API Info through tmdbId --}}
<h1>{{title}}</h1>
<img src="{{image}}" alt="Picture here">
<p>{{plot}}</p>
<p>{{releaseYear}}</p>
{{#each genres}}
<p>{{name}}</p>
{{/each}} {{id}} {{!-- put in other list --}}
<button onclick="window.location='/movies/{{dbId}}/delete'">Delete</button>
<button onclick="window.open('https://www.themoviedb.org/movie/{{dbId}}' , '_blank')">Look for details on the website</button>
{{#if youtubeLink}}
<button type="button" data-toggle="modal" data-target="#myModal">Watch Trailer</button>
{{/if}}


<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-body">
                <iframe width='470' height='315' src='{{youtubeLink}}'>
                </iframe>
            </div>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>

    </div>
</div>

</div>